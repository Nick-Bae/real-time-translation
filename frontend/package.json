{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
"scripts": {
  "update-env": "node utils/detectBackend.js",
  "backend": "cd ../backend && venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000", 
  "dev": "next dev -H 0.0.0.0 -p 3000",
  "check": "node utils/check-status.js",
  "qr": "node utils/show-qr.js",
  "dev-all": "npm run update-env && concurrently -k -n BACKEND,FRONTEND \"npm:backend\" \"npm:dev\" && npm run check && npm run qr"
},

  "dependencies": {
    "axios": "^1.8.4",
    "next": "15.2.4",
    "qrcode-terminal": "^0.12.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
